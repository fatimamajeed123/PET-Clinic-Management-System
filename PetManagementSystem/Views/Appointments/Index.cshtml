@model IEnumerable<PetManagementSystem.Models.Appointment>

@{
    ViewBag.Title = "My Appointments";
}

<h2>My Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Pet</th>
            <th>Appointment Date</th>
            <th>Status</th>
            <th>Prescription</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Pet.Name</td>
                    <td>@appointment.AppointmentDate</td>
                    <td>@(appointment.IsApproved ? "Approved" : "Pending")</td>
                    <td>

                        <a asp-action="Index" asp-controller="Prescriptions" asp-route-appointmentId="@appointment.AppointmentId" class="btn btn-info">View Prescription</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>
