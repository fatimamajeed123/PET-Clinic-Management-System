@model PetManagementSystem.Models.Users

@{
    ViewBag.Title = "Register Vet";
}

<style>
    body {
        background-image: url('/images/petowner.jpg');
        background-size: cover;
        background-position: center;
        font-family: Arial, sans-serif;
    }

    form {
        background-color: #fff;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        width: 300px;
        margin: 40px auto;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-size: 16px;
        color: #666;
    }

    input[type="text"], input[type="email"], input[type="password"] {
        width: 100%;
        height: 40px;
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    button[type="submit"] {
        background-color: #4CAF50;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        button[type="submit"]:hover {
            background-color: #3e8e41;
        }

    h2 {
        text-align: center;
        font-size: 36px;
        color: #333;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        background-color: #f5f5f5;
        padding: 10px;
        border-radius: 10px;
    }
</style>

<h2>Register Vet</h2>

<form asp-action="RegisterVet" method="post">
    <div>
        <label>First Name</label>
        <input asp-for="FirstName" required />
    </div>
    <div>
        <label>Last Name</label>
        <input asp-for="LastName" required />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" required />
    </div>
    <div>
        <label>Phone Number</label>
        <input asp-for="PhoneNo" required />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" required type="password" />
    </div>
    <button type="submit">Register</button>
</form>