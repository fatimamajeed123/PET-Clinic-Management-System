@model IEnumerable<PetManagementSystem.Models.Prescription>

@{
    ViewBag.Title = "My Prescriptions";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/images/petowner.jpg'); /* replace with your desired background image */
            background-size: cover;
            background-color: #f8f9fa;
        }

        .table-container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .table th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        .table td {
            text-align: center;
        }

        .table {
            margin-bottom: 0;
        }

        .table-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="table-container">
            <h2>@ViewBag.Title</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Medication Name</th>
                        <th>Dosage</th>
                        <th>Instructions</th>
                        <th>Pet</th>
                        <th>Appointment Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prescription in Model)
                    {
                        <tr>
                            <td>@prescription.MedicationName</td>
                            <td>@prescription.Dosage</td>
                            <td>@prescription.Instructions</td>
                            <td>@prescription.Appointment.Pet.Name</td>
                            <td>@prescription.Appointment.AppointmentDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>